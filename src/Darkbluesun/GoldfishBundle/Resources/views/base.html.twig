{% extends "base.html.twig" %}
{% if edit_form is defined %}
{% form_theme edit_form 'form_table_layout.html.twig' %}
{% endif %}
{% set route = app.request.attributes.get('_route') %}
{% block nav %}
  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Goldfish</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li{% if route == 'home' %} class="active"{% endif %}><a href="#">Home</a></li>
            <li{% if route == 'clients' %} class="active"{% endif %}><a href="{{ path('clients') }}">Clients</a></li>
            <li{% if route == 'project' %} class="active"{% endif %}><a href="{{ path('project') }}">Projects</a></li>
            <li{% if route == 'tasks' %} class="active"{% endif %}><a href="{{ path('tasks') }}">Tasks</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/3.1.3/css/bootstrap-datetimepicker.min.css">
<style type="text/css">
  body { margin-top: 50px;}
	/** Lists */
    table.records_list tbody tr { cursor: pointer; }
    /** Edit forms **/
  form.edit input { border: none; background: none; }
  form.edit input.form-control { background: #FFF }
</style>
{% endblock %}

{% block javascripts %}
<script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.8.4/moment.min.js"></script>
<script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/3.1.3/js/bootstrap-datetimepicker.min.js"></script>
<script type="text/javascript">
	$(function() {
		/**
		 * Lists
		 */
		
		/** Click on a row to edit it **/
        $('table.records_list tbody tr').click(function() {
            window.location.href = $(this).find('a.edit').attr('href');
        });

        /**
         * Edit Forms
         */ 
		// Style an input when focused
		$('form.edit input').focus(function() {
			$(this).addClass('form-control');
		}).blur(function() {
			$(this).removeClass('form-control');
			// Save the form data
			saveForm($(this.form));
		});
    $('.datetimepicker').datetimepicker({format:'DD/MM/YYYY hh:mm'});

	});

	function saveForm(form) {
		$.ajax({
			type: form.attr('method'),
			url: form.attr('action'),
			data: form.serialize(),
			datatype: 'json',
			success: saveSuccess
		});
	}

	function saveSuccess(data) {
		console.log(data);
	}
</script>
{% endblock %}