{% extends 'DarkbluesunGoldfishBundle::base.html.twig' %}

{% block body -%}

	<h2>Delete {{client}}</h2>
	<p>Are you really sure you want to delete this client?</p>

	{% if client.comments|length %}
	<span>The following comments will also be deleted</span><ul>
	{% for comment in client.comments %}
	<li>{{comment}}</li>
	{% endfor %}
	</ul>
	{% endif %}

	{% if client.projects|length %}
	<span>The following projects will be orphaned</span><ul>
	{% for project in client.projects %}
	<li>{{project}}</li>
	{% endfor %}
	</ul>
	{% endif %}

	{% if client.tasks|length %}
	<span>The following tasks will be orphaned</span><ul>
	{% for task in client.tasks %}
	<li>{{task}}</li>
	{% endfor %}
	</ul>
	{% endif %}
	
	{{ form_start(delete_form) }}
	{{ form_widget(delete_form.submit,{'label':'Yes, Delete it','attr':{'class':'btn btn-danger btn-lg'}})}}
	{{ form_end(delete_form) }}


    <br/>
    <br/>
    <br/>
{% endblock %}
