{% extends 'DarkbluesunGoldfishBundle::base.html.twig' %}

{% block body -%}
    <div class="page-header">
        <a href="{{ path('project_new') }}" class="btn btn-lg btn-default new" style="float:right;"><i class="fa fa-plus"> </i> Add</a>
        <h1>Project list</h1>
    </div>

    <table class="table table-striped records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Duedate</th>
                <th>Budget</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a class='edit' href="{{ path('project_edit', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.dueDate.format('d/m/y') }}</td>
                <td>{{ entity.budget }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
