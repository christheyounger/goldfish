    
    <form id="form-quick-task" action="{{path('project_quick_task',{'id':project.id})}}">
    <table class="records_list table table-striped">
        <thead>
            <tr>
                <th><a title="Assignee"><i class="fa fa-user"></i></a></th>
                <th>Name</th>
                <th>Due</th>
                <th colspan="2">Budget</th>
            </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
            <tr data-id="{{ task.id }}" data-href="{{ path('tasks_edit', { 'id': task.id }) }}">
                <td>{% include "DarkbluesunGoldfishBundle:Account:icon.html.twig" with {'user':task.assignee} %}</td>
                <td>{{ task.name }}</td>
                <td>{% if task.due %}{{ task.due|date('d-m-y H:i') }}{% endif %}</td>
                <td colspan="2"><span class="label label-{{task.budgetColor}}">{{ task.hoursSpent }} / {{ task.time }}</span></td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td><a title="Assign to"><i class="fa fa-user"></i></a></td>
                <td><input type="text" required="true" id="name-field" class="form-control narrow" /></td>
                <td><input type="text" id="due-field" class="form-control narrow datetimepicker" /></td>
                <td><input type="number" id="time-field" class="form-control narrow" /></td>
                <td><button class="btn btn-success" id="savequicktask"><i class="fa fa-save"> </i></button></td>
            </tr>
        </tfoot>
    </table>
    </form>
    <a class="btn btn-default new" href="{{path('tasks_new', {'project_id': project.id})}}">Add</a>