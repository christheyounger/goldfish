{% extends "DarkbluesunGoldfishBundle::base.html.twig" %}
{% block body %}
{% verbatim %}
<div ng-controller="TodoListController">
<h1>Todos</h1>
<input type="text" ng-model="query">
<select ng-model="orderProp">
  <option value="text">Alphabetical</option>
  <option value="done">Status</option>
</select>
<li ng-repeat="todo in todos | filter:query | orderBy:orderProp">
<input type="checkbox" ng-model="todo.done" ng-click="saveTodo(todo)">
<a href="{{todo.url}}"><span class="done-{{todo.done}}">{{todo.assignee.name}} {{todo.name}}</span></a>
</li>
<pre>{{todos | filter:query | orderBy:orderProp | json}}</pre>
</div>
{% endverbatim %}
{% endblock %}
{% block stylesheets %}
{{parent()}}
<script type="text/javascript" src="{{asset('bundles/darkbluesungoldfish/js/vendor/angular.min.js')}}"></script>
<script type="text/javascript" src="{{asset('bundles/darkbluesungoldfish/js/vendor/angular-resource.min.js')}}"></script>
<style>
.done-true { text-decoration: line-through; color: #ccc; }
</style>
{% endblock %}
{% block javascripts %}
{{parent()}}
<script type="text/javascript" src="{{asset('bundles/darkbluesungoldfish/js/todos.js')}}"></script>
{{parent()}}
{% endblock %}